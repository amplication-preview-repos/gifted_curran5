datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  createdAt   DateTime  @default(now())
  customer    Customer? @relation(fields: [customerId], references: [id])
  customerId  String?
  description String?
  endDate     DateTime?
  id          String    @id @default(cuid())
  startDate   DateTime?
  tasks       Task[]
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Customer {
  createdAt DateTime  @default(now())
  email     String?
  id        String    @id @default(cuid())
  name      String?
  projects  Project[]
  updatedAt DateTime  @updatedAt
}

model Task {
  createdAt   DateTime        @default(now())
  description String?
  employee    Employee?       @relation(fields: [employeeId], references: [id])
  employeeId  String?
  id          String          @id @default(cuid())
  project     Project?        @relation(fields: [projectId], references: [id])
  projectId   String?
  status      EnumTaskStatus?
  title       String?
  updatedAt   DateTime        @updatedAt
}

model Service {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Employee {
  createdAt     DateTime  @default(now())
  dateOfJoining DateTime?
  id            String    @id @default(cuid())
  name          String?
  position      String?
  tasks         Task[]
  updatedAt     DateTime  @updatedAt
}

enum EnumTaskStatus {
  Option1
}
